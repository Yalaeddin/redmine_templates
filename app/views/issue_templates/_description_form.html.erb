<%= f.fields_for :descriptions do |description_form| %>
    <% if description_form.object.is_a? IssueTemplateDescriptionSection %>
    	<%= render :partial => "issue_templates/description_section_form", :locals => { form: description_form, template: false } %>
    <% elsif description_form.object.is_a? IssueTemplateDescriptionInstruction %>
        <%= render :partial => "issue_templates/description_instruction_form", :locals => { form: description_form, template: false } %>
    <% end %>
<% end %>
<%= f.fields_for :descriptions_attributes, index: "$id_section$" do |description_form| %>
    <%= render :partial => "issue_templates/description_section_form", :locals => { form: description_form, template: true } %>
<% end %>
<%= f.fields_for :descriptions_attributes, index: "$id_instruction$" do |description_form| %>
    <%= render :partial => "issue_templates/description_instruction_form", :locals => { form: description_form, template: true } %>
<% end %>
