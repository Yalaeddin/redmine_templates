<%= issue_template_section_form(form, IssueTemplateDescriptionField, template) do %>
  <p>
    <%= form.text_field :title, :placeholder => "Titre (obligatoire)", :label => 'Section courte', :size => 45 %>
  </p>
  <div class="collapsible">
    <p>
      <%= form.text_field :description, :placeholder => "Description", label: "Description", :size => 80 %>
    </p>
    <p>
      <%= form.text_field :text,
                          :accesskey => accesskey(:edit),
                          :label => "Contenu initial",
                          :size => 80 %>
    </p>
    <p>
      <%= form.text_field :placeholder, label: "Valeur si non saisi", :size => 80 %>
    </p>
  </div>
<% end %>
