<p>
  <%= label_tag do %>
    <%= section.title %>
    <% if section.required %>
      <span class="required"> *</span>
    <% end %>
    <% if section.description.present? %>
      <em class="info" style="padding-top: 3px; line-height: 1.5em;">
        <%= section.description %>
      </em>
    <% end %>
  <% end %>
  <%= form.date_field :text,
                      size: section.select_type == "datetime" ? 14 : 10,
                      no_label: true,
                      required: section.required,
                      value: reload_current_value(@sections_attributes, section.position) || section.text
  %>
  <% if Redmine::Plugin.installed?(:redmine_datetime_custom_field) %>
    <%= calendar_for("issue_issue_template_descriptions_attributes_#{form.index}_text", section.select_type == "datetime") %>
  <% else %>
    <%= calendar_for("issue_issue_template_descriptions_attributes_#{form.index}_text") %>
  <% end %>
  <%= form.hidden_field :empty_value, value: section.empty_value %>
</p>
